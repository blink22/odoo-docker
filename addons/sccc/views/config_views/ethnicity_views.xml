<odoo>
    <!--Ethnicity Views-->​
    <!--tree view-->
    <record model="ir.ui.view" id="ethnicity_tree_view">
              <field name="name">ethnicity list tree</field>
              <field name="model">sccc.ethnicity</field>
              <field name="arch" type="xml">
                  <tree create="true">
                      <field name="name"/>
                      <field name="clients"/>
                  </tree>
              </field>
    </record>

    <!--form view-->
    <record model="ir.ui.view" id="ethnicity_form_view">
              <field name="name">ethnicity form</field>
              <field name="model">sccc.ethnicity</field>
              <field name="arch" type="xml">
                   <form string="Ethnicity Form">
                       <sheet>
                        <group>
                            <field name="name"/>
                            <field name="clients"/>
                        </group>
                       </sheet>
                </form>
              </field>
    </record>

    <!--search view-->
    <record model="ir.ui.view" id="ethnicity_search_view">
      <field name="name">ethnicity list search</field>
      <field name="model">sccc.ethnicity</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
        </search>
      </field>
    </record>
    ​
</odoo>
<odoo>
    <!--Counselor Views-->​
    <!--tree view-->
    <record model="ir.ui.view" id="counselor_tree_view">
              <field name="name">counselor list tree</field>
              <field name="model">sccc.counselor</field>
              <field name="arch" type="xml">
                  <tree create="true">
                      <field name="first_name"/>
                      <field name="last_name"/>
                      <field name="in_crawl"/>
                      <field name="out_of_office"/>
                      <field name="lgbtq"/>
                      <field name="availability"/>
                      <field name="trained_for"/>
                      <!-- <field name="departments"/> -->
                      <!-- <field name="files" widget="many2many_tags"/> -->
                      <!-- <field name="ethnicity"/> -->
                      <!-- <field name="language"/> -->
                      <field name="create_date"/>
                  </tree>
              </field>
    </record>
​
    <!--form view-->
    <record model="ir.ui.view" id="counselor_form_view">
          <field name="name">counselor.form</field>
          <field name="model">sccc.counselor</field>
          <field name="arch" type="xml">
               <form string="Counselor Form">
                   <sheet>
                       <notebook>
                       <page name="personal_details" string="Personal Details">
                            <group>
                              <field name="in_crawl"/>
                              <field name="out_of_office"/>
                              <field name="first_name"/>
                              <field name="last_name"/>
                              <field name="departments" widget="selection"/>
                              <field name="location" widget="many2many_tags"/>
                              <field name="trained_for" widget="selection"/>
                              <field name="lgbtq"/>
                              <field name="availability"/>

                              <separator string="Personal Info"/>
                              <field name="date_of_birth"/>
                              <field name="age"/>
                              <field name="gender" widget="selection"/>
                              <field name="gender_pronouns" widget="selection"/>
                              <field name="ethnicity" widget="selection"/>
                              <field name="language"/>

                              <separator string="Address"/>
                              <field name="street"/>
                              <field name="apt_no"/>
                              <field name="city"/>
                              <field name="zip_code"/>

                              <separator string="Contact"/>
                              <field name="email"/>
                              <field name="cell_phone"/>
                              <field name="other"/>
                            </group>
                       </page>
                       <page name="caseload" string="Caseload">
                           <group>
                               <field name="files"/>
                           </group>
                       </page>
                       </notebook>
                   </sheet>
                </form>
          </field>
    </record>
​
    ​<!--search view-->
    <record model="ir.ui.view" id="counselor_search_view">
      <field name="name">counselor list search</field>
      <field name="model">sccc.counselor</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <field name="in_crawl"/>
          <field name="availability"/>
          <field name="files"/>
        </search>
      </field>
    </record>
</odoo>
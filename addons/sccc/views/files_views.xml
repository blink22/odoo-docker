<odoo>
    <!--Files Views-->​
    <!--tree view-->
    <record model="ir.ui.view" id="file_tree_view">
              <field name="name">file list tree</field>
              <field name="model">sccc.file</field>
              <field name="arch" type="xml">
                  <tree create="true">
                      <field name="file_number"/>
                      <field name="name"/>
                      <field name="clients" widget="many2many_tags"/>
                      <field name="intake_date"/>
                      <field name="appointment_types"/>
                      <field name="availability"/>
                      <field name="on_waitlist"/>
                      <field name="hold"/>
                      <field name="lgbtq_counselor"/>
                      <field name="preferred_gender"/>
                      <field name="preferred_age"/>
                      <field name="other_considerations"/>
                      <field name="additional_notes"/>
                      <field name="create_date"/>
                  </tree>
              </field>
    </record>
​
    <!--form view-->
    <record model="ir.ui.view" id="file_form_view">
              <field name="name">file form</field>
              <field name="model">sccc.file</field>
              <field name="arch" type="xml">
                   <form string="File Form">
                      <sheet>
                        <group>
                          <table>
                            <tr>
                              <group>
                                <field name="name"/>
                                <field name="file_number"/>
                                <field name="additional_notes"/>
                              </group>
                            </tr>
                            <tr>
                              <notebook>
                                <page string="General Info">
                                  <table style='width:100%;' border='0'>
                                    <tr>
                                      <td style="width: 30%">
                                        <group>
                                          <field name="clients" widget="many2many_tags"/>
                                          <field name="appointment_types" widget="many2many_tags"/>
                                        </group>
                                      </td>
                                      <td >
                                        <group>
                                          <field name="out_reach"/>
                                          <field name="created_on"/>
                                          <field name="on_waitlist"/>
                                          <field name="hold"/>
                                          <field name="attended_session"/>
                                        </group>
                                      </td>
                                    </tr>
                                    <tr>
                                      <td style="width: 100%">
                                        <group>
                                          <field name="intake_date"/>
                                          <field name="availability" widget="many2many_tags"/>
                                          <field name="lgbtq_counselor"/>
                                          <field name="preferred_gender"/>
                                          <field name="preferred_age"/>
                                          <field name="other_considerations"/>
                                        </group>
                                      </td>
                                    </tr>
                                  </table>
                                </page>
                                <page string="Financial Info">
                                  <group>
                                    <field name="fee" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="balance" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="payments" widget="many2many_tags"/>
                                  </group>
                                </page>
                                <page string="Forms">
                                  <group>
                                    <field name="individual_assessment" widget="selection"/>
                                    <field name="fam_assessment" widget="selection"/>
                                    <field name="fee_setting" widget="selection"/>
                                    <field name="fee_adjustment" widget="many2many_tags"/>
                                  </group>
                                </page>
                                <page string="Counseling History">
                                  <group>
                                    <field name="meetings" widget="many2many_tags"/>
                                    <field name="progress_notes" widget="many2many_tags"/>
                                  </group>
                                </page>
                              </notebook>
                            </tr>
                          </table>
                            <!--   
                            <field name="terminated" colspan="2"/>
                            <field name="other_considerations" colspan="2"/>
                            <field name="counselor" colspan="2"/>                            
                            <field name="sessions" colspan="2"/>
                            <field name="availability" colspan="2"/>
                             -->
                        </group>
                      </sheet>
                </form>
              </field>
    </record>

    <!--search view-->
    <record model="ir.ui.view" id="file_search_view">
      <field name="name">file list search</field>
      <field name="model">sccc.file</field>
      <field name="arch" type="xml">
        <search>
          <field name="file_number"/>
          <field name="name"/>
          <field name="clients"/>
          <field name="intake_date"/>
          <field name="availability"/>
          <field name="on_waitlist"/>
          <field name="hold"/>
          <field name="lgbtq_counselor"/>
          <field name="other_considerations"/>
          <field name="additional_notes"/>
        </search>
      </field>
    </record>
    ​
</odoo>
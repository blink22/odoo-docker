<odoo>
    <!--Payments Views-->​
    <!--tree view-->
    <record model="ir.ui.view" id="payment_tree_view">
              <field name="name">payment list tree</field>
              <field name="model">sccc.payment</field>
              <field name="arch" type="xml">
                  <tree create="true">
                      <field name="files"/>
                      <field name="name"/>
                      <field name="date"/>
                      <field name="amount_due"/>
                      <field name="amount_paid"/>
                      <field name="payment_method"/>
                  </tree>
              </field>
    </record>

    <!--form view-->
    <record model="ir.ui.view" id="payment_form_view">
              <field name="name">payment form</field>
              <field name="model">sccc.payment</field>
              <field name="arch" type="xml">
                   <form string="Payment Form">
                       <sheet>
                        <group>
                          <field name="name"/>
                          <field name="files"/>
                          <field name="counselor"/>
                          <field name="date"/>
                          <field name="description_tag"/>
                          <field name="amount_due"/>
                          <field name="amount_paid"/>
                          <field name="payment_method"/>
                        </group>
                       </sheet>
                </form>
              </field>
    </record>

    <!--search view-->
    <record model="ir.ui.view" id="payment_search_view">
      <field name="name">payment list search</field>
      <field name="model">sccc.payment</field>
      <field name="arch" type="xml">
        <search>
          <field name="files"/>
          <field name="name"/>
          <field name="date"/>
          <field name="amount_due"/>
          <field name="amount_paid"/>
          <field name="payment_method"/>
        </search>
      </field>
    </record>
    ​
</odoo>